/* pages/makeConfirm/makeConfirm.wxss */
page {
  background-color: #fff;
}

.avatar {
  border-radius: 10px;
  position: absolute;
  top: 5px;
  left: 10rpx;
  width: 60px;
  height: 60px;
}

.name {
  position: absolute;
  left: 75px
}

.cook_text {
  margin-top: 10px;
  margin-left: 20px;
  font-size: 32rpx;
  color: #39b54a;
  height: 50rpx;
}

.cook_view {
  width: 100%;
  height: 200rpx;
  padding: 10rpx;
  background-color: #fff;
}

.radios {
  width: 100%;
  height: 200rpx;
  columns: 4;
  column-gap: 20rpx;
  letter-spacing: 5px;
  line-height: 40px;
}

.radio {
  text-align: center;
  margin-bottom: 5rpx;
}

.checked {
  color: #39b54a;
  border: #39b54a 1px solid;
  border-radius: 4px;
  font-size: 32rpx;
  padding: 3px 18px;
}

.totalScore {
  float: right;
  height: 100rpx;
  padding: 0 30rpx;
  line-height: 100rpx;
  color: #000;
  font-size: 32rpx;
}

.complete-box {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.complete {
  background-image: linear-gradient(45deg, #39b54a, #8dc63f);
  color: white;
  border-radius: 50rpx;
}