/* pages/make/make.wxss */
.make-image {
  margin: 10% auto;
  width: 200px;
  height: 200px;
  border: 2px solid #39b54a;
  border-radius: 50%;
}

.tip {
  font-size: 36rpx;
  color: #999;
}

.make {
  margin-top: 10%;
  font-size: 36rpx;
  border-radius: 30px;
  background-image: linear-gradient(45deg, #39b54a, #8dc63f);
  width: 300rpx;
  color: #fff;
}

.avatar {
  border: lightgrey;
  border-style: solid;
  border-width: 1px;
  border-bottom-left-radius: 10px;
  border-top-left-radius: 10px;
  border-bottom-right-radius: 10px;
  border-top-right-radius: 10px;
  position: absolute;
  top: 20rpx;
  left: 30rpx;
  width: 100rpx;
  height: 100rpx;
}