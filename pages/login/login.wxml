<view data-weui-theme="{{theme}}">
  <button class="avatar-wrapper" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
    <image class="avatar" src="{{avatarUrl}}"></image>
  </button> 
  <mp-form>
    <mp-cells>
      <mp-cell title="昵称">
        <input type="nickname" class="weui-input" placeholder="请输入昵称" bindinput="onInput"/>
      </mp-cell>
    </mp-cells>
    <button type="primary" style="margin-top: 20rpx;" bind:tap="onSubmit">登录</button>
  </mp-form>
</view>